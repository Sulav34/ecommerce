<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background=" #f0f5f5"
    android:orientation="vertical"
    tools:context=".fragments.AboutFragment">

  <Button
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:backgroundTint="@color/white"
      android:text="About us"
      android:textColor="#ff7c17"
      android:textStyle="bold"
      android:textSize="20sp"
      android:gravity="left"/>

    <TextView
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="About SMBK WEARS"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/aboutsmbk"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="0dp"/>
    <TextView
        android:id="@+id/feedbacks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Feedbacks"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/feedback"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="0dp"/>
    <TextView
        android:id = "@+id/maplocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Map(Location)"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/location"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="0dp"/>

  <TextView
      android:id = "@+id/theme"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:text="Theme"
      android:textSize="25dp"
      android:textStyle="bold"
      android:textColor="@color/black"
      android:drawableLeft="@drawable/theme"/>
  <EditText
      android:layout_width="match_parent"
      android:layout_height="25dp"
      android:layout_marginTop="0dp"/>

  <TextView
      android:id = "@+id/sensor"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:text="Sensor"
      android:textSize="25dp"
      android:textStyle="bold"
      android:textColor="@color/black"
      android:drawableLeft="@drawable/theme"/>
  <EditText
      android:layout_width="match_parent"
      android:layout_height="25dp"
      android:layout_marginTop="0dp"/>
  <Button
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:text="Logout"
      android:id="@+id/btnLogout"
      android:layout_gravity="center"
      android:textColor="@color/white"
      android:background="@drawable/btn_signin"
     android:layout_marginTop="70dp"/>



  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="90dp"
      android:text="copyright 2020 by SMBK Wears "
      android:textSize="16dp"
      android:textStyle="bold"
      android:layout_marginLeft="60dp"
      android:textColor="@color/black"
      android:drawableLeft="@drawable/copyright"/>





</LinearLayout>